<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
	<appSettings>
		<!-- Number of ms to sleep for between iStockNow polls. -->
		<add key="sleeptime" value="15000" />
		
		<!-- "7" or "7Plus" -->
		<add key="type" value="7"/>
		
		<!-- "Black", "Jet Black", etc., or "allblack" for either of the black colours. -->
		<add key="colour" value="Silver"/>

		<!-- "256GB", "128GB", etc, or "nosmall" for anything but 32GB. -->
		<add key="model" value="nosmall"/>

		<!-- Semicolon separated stores list. Canonical names for the Apple stores can be found in "AppleStoreNames.txt". -->
		<add key="stores" value="Stratford - Stratford City; London - Regent Street; London - Covent Garden; London - White City; Kingston upon Thames - Bentall Centre; Barnet - Brent Cross; Bromley - Bromley"/>
	</appSettings>
</configuration>